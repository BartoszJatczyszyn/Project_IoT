<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".activities.main.Sensors">

    <LinearLayout
        android:id="@+id/lista_czujnikow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="vertical"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/czujniki_wroc"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/image_6" />
        <ImageView
            android:src="@drawable/image_3"
            android:layout_marginTop="35dp"
            android:layout_marginStart="90dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:layout_marginLeft="131dp"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/czujniki_string"
            />
        <ImageView
            android:src="@drawable/line_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="86dp"
            android:layout_width="wrap_content"
            android:layout_height="5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="310dp"
        android:layout_marginTop="630dp">
        <View
            android:background="@drawable/ellipse"
            android:backgroundTint="@color/white"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <Button
            android:id="@+id/add"
            android:drawableBottom="@drawable/image_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="6dp">
        </Button>
    </RelativeLayout>

</RelativeLayout>
